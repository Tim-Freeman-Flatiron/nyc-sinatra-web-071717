<form action='/figures/<%=@figure.id%>' method="post">
	<input type="hidden" id="hidden" name="_method" value="patch">
	
	<p> Name of Figure
	<input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></p>

	<p>Update landmark(s) for your figure:</p>
	<% @landmarks.each do |landmark| %>
		
		
	<input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input>
		
	<% end %>


	<p>...and/or create a new landmark for your figure:</p>
	<label>New Landmark:</label>
	<input type="text" name="landmark[name]" id="new_landmark">



	<p>Update title(s) for your figure:</p>
	<% @titles.each do |title| %>
	<input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></input>
	<% end %>


	<p>...and/or create a new title for your figure:</p>
	<label>New Title:</label>
	<input type="text" name="title[name]" id="new_title">


	<input type="submit" name="submit" id="submit" value="Edit Figure">
</form>